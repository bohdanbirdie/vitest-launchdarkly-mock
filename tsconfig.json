{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "incremental": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
